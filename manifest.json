{
  "manifest_version": 2,
  "name": "Broadcastify Screen Sharing",
  "description": "Enables screen-sharing in Broadcastify",
  "version": "0.1",
  "content_security_policy": "default-src",
  "permissions": [
    "tabs",
    "desktopCapture",
    "https://4295bcc1.ngrok.com/*",
    "https://broadcast-with-respoke.herokuapp.com/*",
    "https://jsbin.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["https://4295bcc1.ngrok.com/*", "https://broadcast-with-respoke.herokuapp.com/*", "https://jsbin.com/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}
